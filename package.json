{
  "name": "book-review-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "dev:api": "pnpm --filter api dev",
    "dev:db": "pnpm --filter db dev",
    "dev:db:migrate": "pnpm --filter db run migrate",
    "dev:db:seed": "pnpm --filter db run seed",
    "dev:worker": "pnpm --filter worker dev"
  },
  "devDependencies": {
    "@types/ioredis": "^5.0.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "bullmq": "^5.56.10",
    "dotenv-flow": "^4.1.0",
    "ioredis": "^5.7.0"
  }
}
