{
  "name": "book-review-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "dev:api": "pnpm --filter api dev",
    "dev:db": "pnpm --filter db dev",
    "dev:migrate": "pnpm --filter db run migrate"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
